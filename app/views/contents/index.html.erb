<h1>Listing contents</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Sort order</th>
      <th>Content type</th>
      <th>Group</th>
      <th>Filename</th>
      <th>Thumbnail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= content.title %></td>
        <td><%= content.description %></td>
        <td><%= content.sort_order %></td>
        <td><%= content.content_type %></td>
        <td><%= content.group %></td>
        <td><%= content.filename %></td>
        <td><%= content.thumbnail %></td>
        <td><%= link_to 'Show', content %></td>
        <td><%= link_to 'Edit', edit_content_path(content) %></td>
        <td><%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

